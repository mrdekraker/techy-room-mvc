<div class="card">
  <div class="card-body">
    <h4 class="card-title"><a
        class="text-info"
        href="/post/{{id}}"
      >{{title}}</a></h4>
    <h6 class="card-subtitle mb-2 text-muted">
      Posted by
      {{user.username}}
      on
      {{created_at}}</h6>
  </div>
  <div class="card-body">
    <p class="card-text">{{content}}</p>
  </div>
</div>