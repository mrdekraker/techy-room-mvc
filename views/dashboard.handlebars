
{{#if posts.length}}
<section class="container">
    <h2>Post History</h2>
    {{#each posts as |post|}}
        {{> dashboard-postinfo post}}
    {{/each}}
{{/if}}
<div class="btn-container container">
    <button class="btn justify-content-center" type="submit"><a class="link" href="/dashboard/new">Add New Post</a></button>
</div>
</section>